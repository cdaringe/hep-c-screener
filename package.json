{
  "name": "hep-c-screener",
  "description": "a cds-hooks service to prompts care providers to screen baby-boomers for hepatitis c",
  "version": "0.0.0-development",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard",
    "start:watch": "nodemon node src/bin.js",
    "start": "node src/bin.js",
    "test": "cross-env NODE_ENV=test ava --verbose",
    "format": "prettier-standard 'src/**/*.js'",
    "format:staged": "prettier-standard 'src/**/*.js'"
  },
  "dependencies": {
    "fhir.js": "^0.0.20",
    "fs-extra": "^8.0.0",
    "invariant": "^2.2.2",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-cors": "^0.0.16",
    "koa-pino-logger": "^2.1.1",
    "koa-route": "^3.2.0",
    "lodash": "^4.17.5",
    "perish": "^1.0.1",
    "pino": "^5.13.1",
    "pino-pretty": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/cdaringe/hep-c-screener"
  },
  "author": "cdaringe",
  "homepage": "https://github.com/cdaringe/hep-c-screener#readme",
  "devDependencies": {
    "ava": "^1.0.0-beta.3",
    "axios": "^0.19.0",
    "bluebird": "^3.5.1",
    "cross-env": "^5.1.4",
    "freeport": "^1.0.5",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.0",
    "nodemon": "^1.15.0",
    "npm-run": "^5.0.1",
    "npm-run-all": "^4.1.2",
    "prettier-standard": "^10.0.0",
    "semantic-release": "^15.1.7",
    "standard": "^12.0.1"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p test format:staged"
    }
  }
}
